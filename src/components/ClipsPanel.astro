---
import type { Clip } from "@lib/clips";
// BASE-aware link builder (relocatable-safe)
const base = import.meta.env.BASE_URL.replace(/\/?$/, "/");
const join = (p: string) => `${base}${String(p).replace(/^\/+/, "")}`;
const {
clips = [],
basePath = import.meta.env.BASE_URL,
title = "Clips",
} = Astro.props as {
clips: Clip[];
basePath?: string;
title?: string;
};
---
{clips.length ? (
<section class="clips" aria-label={title}>
    <div class="clips__title">
        <span>{title}</span>
        <span class="clips__count">{clips.length}</span>
    </div>
    <ol class="clips__list">
        {clips.map((c) => {
        const anchor = c.section?.slug ? `#${c.section.slug}` : "";
        const href = `${basePath}/${c.sourceSlug}${anchor}`;
        return (
        <li class="clips__item">
            <a class="clips__meta" href={href}>
                <span class="clips__from">{c.sourceTitle}</span>
                {c.section?.text ? <span class="clips__sep">Â·</span> : null}
                {c.section?.text ? <span class="clips__section">{c.section.text}</span> : null}
            </a>
            <pre class="clips__text"><code>{c.text}</code></pre>
        </li>
        );
        })}
    </ol>
</section>
) : null}
<style lang="scss">
.clips {
    margin-top: 18px;
    padding-left: 16px;
    border-left: 1px solid var(--outline-variant, rgba(0, 0, 0, .12));
}

.clips__title {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
    font-size: 12px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--on-surface-variant, rgba(0, 0, 0, .55));
    margin: 4px 0 10px;
}

.clips__count {
    font-size: 11px;
    opacity: 0.7;
}

.clips__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 10px;
}

.clips__item {
    margin: 0;
    padding: 0;
}

.clips__meta {
    display: inline-flex;
    align-items: baseline;
    gap: 6px;
    text-decoration: none;
    color: var(--on-surface, #111);
    opacity: 0.82;
    padding: 4px 8px;
    border-radius: 10px;
}

.clips__meta:hover {
    background: color-mix(in oklab, var(--surface, #fff), var(--on-surface, #111) 6%);
    opacity: 1;
}

.clips__sep {
    opacity: 0.55;
}

.clips__from {
    font-weight: 550;
}

.clips__section {
    opacity: 0.75;
}

.clips__text {
    margin: 6px 0 0;
    padding: 10px 12px;
    border-radius: 14px;
    background: color-mix(in oklab, var(--surface, #fff), var(--on-surface, #111) 4%);
    border: 1px solid var(--outline-variant, rgba(0, 0, 0, .10));
    white-space: pre-wrap;
    word-break: break-word;
    overflow: hidden;
}

.clips__text code {
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    font-size: 13px;
    line-height: 1.45;
    color: var(--on-surface, #111);
}
</style>